# Environment Variables Template

# Database Configuration
DEV_DB_URL=your_dev_database_url
DEV_DB_DRIVER=your_dev_database_driver
DEV_DB_USERNAME=your_dev_username
DEV_DB_PASSWORD=your_dev_password

QA_DB_URL=your_qa_database_url
QA_DB_DRIVER=your_qa_database_driver
QA_DB_USERNAME=your_qa_username
QA_DB_PASSWORD=your_qa_password

PROD_DB_URL=your_prod_database_url
PROD_DB_DRIVER=your_prod_database_driver
PROD_DB_USERNAME=your_prod_username
PROD_DB_PASSWORD=your_prod_password

# Logging Levels
DEV_LOG_LEVEL=DEBUG
QA_LOG_LEVEL=INFO
PROD_LOG_LEVEL=WARN

# Server Configuration
DEV_SERVER_PORT=8080
QA_SERVER_PORT=8081
PROD_SERVER_PORT=8082

# JPA Configuration
DEV_JPA_DDL_AUTO=update
QA_JPA_DDL_AUTO=validate
PROD_JPA_DDL_AUTO=validate

DEV_JPA_SHOW_SQL=true
QA_JPA_SHOW_SQL=false
PROD_JPA_SHOW_SQL=false